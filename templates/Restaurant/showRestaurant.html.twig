{% extends 'base.html.twig' %}

{% block title %}Hello AnimauxController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
                    
		

        <div class="container">
           
            <h3 class="card-header text-default">
                                Detail de restaurant
                    </h3>
			      
                    <div class="card bg-light rounded">
                        <div class="container-fluid">
                            
                    
					

                    <div class="card-body mt-2 rounded">
                <table class="table table-striped table-hover">
				  <thead>
					<tr>
						<th>Nom</th>
						<th>Description</th>
						<th>Date de Creation</th>
                        <th>Ville</th>
					</tr>
				</thead>
				<tbody>
				
					<tr>
					
						<td>{{restaurant.name}}</td>
						<td>{{restaurant.description}}</td>
						<td>{{restaurant.getCreatedAt()|date}}</td>
                        <td>{{city.name}}</td>
						
					</tr>
					
						
				</tbody>
			</table>
                            </div>

                        </div>
                    </div>
             
        </div>



<div class="container">
           
            <h3 class="card-header text-default">Reviews</h3>
			      
                    <div class="card bg-light rounded">
                        <div class="container-fluid">
                            
                    
					

                    <div class="card-body mt-2 rounded">
                <table class="table table-striped table-hover">
				  <thead>
					<tr>
						<th>Nom d'utilisateur</th>
						<th>Message</th>
						<th>Rating</th>
					</tr>
				</thead>
				<tbody>
				{% for review in reviews %}
					<tr>
						<td>{{review.username}}</td>
						<td>{{review.message}}</td>
                        <td>{{review.rating}}</td>
						
					</tr>
				{% endfor %}
						
				</tbody>
			</table>
                            </div>

                        </div>
                    </div>
             
        </div>


{% endblock %}
