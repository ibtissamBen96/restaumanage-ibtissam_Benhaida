{% extends 'base.html.twig' %}

{% block title %}Gestion des Restaurants{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
                    

		 


	    

        <div class="container">
           
			      <h3 class="card-header text-default">
                                List des Restaurants
                    </h3>
                     <br>
                {% for message in app.flashes('success') %}
                    <div class="alert alert-success">
                        {{ message }}
                    </div>
                {% endfor %}

                {% for message in app.flashes('error') %}
                    <div class="alert alert-error">
                        {{ message }}
                    </div>
                {% endfor %}
                    
                           
                    
								<a href="{{path('create_restaurant')}}"  class="btn btn-primary"><span>Ajouter Restaurant</span></a>
					

                    <div class="card-body mt-2 rounded">
                <table class="table table-striped table-hover">
				  <thead>
					<tr>
						<th>Nom</th>
						<th>Description</th>
						<th>Date de Creation</th>
						<th>Actions</th>
					</tr>
				</thead>
				<tbody>
				{% for restaurant in restaurants %}
					<tr>
					
						<td>{{restaurant.name}}</td>
						<td>{{restaurant.description}}</td>
						<td>{{restaurant.getCreatedAt()|date}}</td>
						<td>  
							<a href="/Restaurant/delete/{{restaurant.id}}" class="btn btn-danger" ><span class="glyphicon glyphicon-trash"></span></a>
							<a href="/Restaurant/update/{{restaurant.id}}" class="btn btn-warning" ><span class="glyphicon glyphicon-edit"></span></a>
                            <a href="/Restaurant/show/{{restaurant.id}}" class="btn btn-info" ><span class="glyphicon glyphicon-eye-open"></span></a>
						</td>
					</tr>
					{% endfor %}
						
				</tbody>
			</table>

            <div class="card-footer">
            
             <a href="/Restaurant/AfficherSixD"  class="btn btn-dark"><span>6 derniers créés</span></a>
            <a href="/Restaurant/AfficherTroisTopM"  class="btn btn-dark"><span>3 top meilleurs</span></a>
            <a href="/Restaurant/ValeurMoyenne"  class="btn btn-dark"><span>Valeur moyenne</span></a>
            <a href="/Restaurant/classerParVot"  class="btn btn-dark"><span>Restaurants classe par vote</span></a>

            </div>
            

                            </div>



    
               
        </div>


{% endblock %}
