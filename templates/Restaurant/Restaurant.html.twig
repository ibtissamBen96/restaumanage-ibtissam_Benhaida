{% extends 'base.html.twig' %}

{% block title %}Hello AnimauxController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
                    <h3 class="card-header text-default">
                                List des Restaurants
                    </h3>
					<br>

		{% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }} alert-dismissible fade show">
                {{ message }}
            </div>
        {% endfor %}
      {% endfor %}

	    {% for message in app.flashes('error') %}
            <div class="alert alert-error">
                {{ message }}
            </div>
        {% endfor %}

        <div class="container">
           
			      
                    <div class="card bg-light rounded">
                        <div class="container-fluid">
                            <br>
                    
								<a href="{{path('create_restaurant')}}"  class="btn btn-primary"><span>Ajouter Restaurant</span></a>
					

                    <div class="card-body mt-2 rounded">
                <table class="table table-striped table-hover">
				  <thead>
					<tr>
						<th>Nom</th>
						<th>Description</th>
						<th>Date de Creation</th>
						<th>Actions</th>
					</tr>
				</thead>
				<tbody>
				{% for restaurant in restaurants %}
					<tr>
					
						<td>{{restaurant.name}}</td>
						<td>{{restaurant.description}}</td>
						<td>{{restaurant.getCreatedAt()|date}}</td>
						<td>  
							<a href="/Restaurant/delete/{{restaurant.id}}" class="btn btn-danger" ><span class="glyphicon glyphicon-trash"></span></a>
							<a href="/Restaurant/update/{{restaurant.id}}" class="btn btn-warning" ><span class="glyphicon glyphicon-edit"></span></a>
                            <a href="/Restaurant/show/{{restaurant.id}}" class="btn btn-info" ><span class="glyphicon glyphicon-eye-open"></span></a>
						</td>
					</tr>
					{% endfor %}
						
				</tbody>
			</table>
            <a href="/Restaurant/AfficherSixD"  class="btn btn-primary"><span>6 derniers créés</span></a>
            <a href="/Restaurant/AfficherTroisTopM"  class="btn btn-primary"><span>3 top meilleurs</span></a>
            <a href="/Restaurant/ValeurMoyenne"  class="btn btn-primary"><span>Valeur moyenne</span></a>

                            </div>



                     

                        </div>
                    </div>
               
        </div>


{% endblock %}
